<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Interior_fragment"
    android:screenOrientation="landscape"
    android:configChanges="orientation|keyboardHidden"
    android:orientation="horizontal">

        <ImageView
            android:id="@+id/prev"
            android:layout_width="35dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginVertical="120dp"/>

        <FrameLayout
            android:layout_width="750dp"
            android:layout_height="320dp">

                <ImageView
                    android:id="@+id/img_viewer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <Button
                    android:id="@+id/wardrobe_button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Info"
                    android:textAlignment="center"
                    app:cornerRadius="20dp" />
                <Button
                    android:id="@+id/bookshelf_button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Info"
                    android:textAlignment="center"
                    app:cornerRadius="20dp" />
                <Button
                    android:id="@+id/tv_button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:text="Info"
                    android:textAlignment="center"
                    app:cornerRadius="20dp" />
                <Button
                    android:id="@+id/hanging_button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:text="Info"
                    android:textAlignment="center"
                    app:cornerRadius="20dp" />
        </FrameLayout>

        <ImageView
            android:id="@+id/next"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:layout_marginVertical="115dp"
            app:srcCompat="@drawable/ic_baseline_navigate_next"/>

</LinearLayout>
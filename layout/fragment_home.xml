<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Home_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageButton_perfumes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/imageButton_makeup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/imageButton_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New"
        android:typeface="sans"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="140dp"
        android:layout_marginStart="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_new"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="180dp"
        android:layout_gravity="center_horizontal"
        android:clipToPadding="false"
        android:orientation="horizontal"
        tools:listitem="@layout/new_product" />

    <TextView
        android:id="@+id/txt_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ad"
        android:typeface="sans"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="20dp"/>

    <ImageButton
        android:id="@+id/imageBtn"
        android:layout_width="400dp"
        android:layout_height="240dp"
        android:src="@drawable/interior"
        android:layout_marginTop="450dp"
        android:layout_gravity="center_horizontal" />

</FrameLayout>

